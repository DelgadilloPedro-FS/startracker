{% extends "layouts/base.html.twig" %}

{% block app %}
<div class="flex flex-col justify-center items-center px-4 py-8">
     <h1 class="text-3xl font-bold mb-4">
        {% if planet is defined %}
            Edit
        {% else %}
            New
        {% endif %}
        Planet Form
    </h1>
    <form method="POST" enctype="multipart/form-data" action="/planets{% if planet is defined %}/{{planet.id}}{% endif %}">
  <div>
    <div>
      <label for="Name" class="text-sm font-bold">Name</label>
      <input id="Name" name="Name" type="text" class="border border-gray-300 rounded-md px-2 py-1 w-full"
        {% if planet is defined %}
          value="{{planet.Name}}"
        {% endif %}
      />
    </div>

    <div>
      <label for="Size" class="text-sm font-bold">Size</label>
      <input id="Size" name="Size" type="number" class="border border-gray-300 rounded-md px-2 py-1 w-full"
        {% if planet is defined %}
          value="{{planet.Size}}"
        {% endif %}
      />
    </div>

    <div>
      <label for="Description" class="text-sm font-bold" >Description</label>
      <textarea id="Description" name="Description" class="border border-gray-300 rounded-md px-2 py-2 w-full">
        {% if planet is defined %}{{planet.Description}}{% endif %}
      </textarea>
    </div>

    {% if stars is defined and stars.length > 0 %}
      <div>
        <label for="starIds">Belongs to</label>
        <select id="starIds" name="starIds" multiple class="border border-gray-300 rounded-md px-2 py-1 w-full">
          {% for star in stars %}
            <option value="{{star.id}}"
              {% if planet is defined and star.id in selectedStarIds %}
                selected
              {% endif %}>
              {{star.Name}}
            </option>
          {% endfor %}
        </select>
      </div>
    {% endif %}
    <button type="submit" class="px-4 py-2 bg-blue-500 text-white hover:bg-blue-700 rounded-md">Submit</button>
    <section class="mt-4">
      <label for="image" class="text-sm font-bold">Upload Image:</label>
      <input type="file" name="image" id="image" class="border border-gray-300 rounded-md px-2 py-1 w-full"/>
    </section>
  </div>
</form>
</div>
{% endblock app %}