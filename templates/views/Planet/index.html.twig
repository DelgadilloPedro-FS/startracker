<h2>Planet</h2>

{% extends "layouts/base.html.twig" %}

{% block app %}
<h2>{{title}}</h2>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Size</th>
            <th>Description</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {% for planet in planets %}
        <tr>
            <td>{{planet.id}}</td>
            <td>{{planet.Name}}</td>
            <td>{{planet.Size}}</td>
            <td>{{planet.Description}}</td>
            <td>
            <a href="/planets/create">
                <button type="button">Delete Me</button>
            </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<section>
        <a href="/planets/create">
            <button type="button">Add New Planet</button>
        </a>
    </section>
{% endblock %}